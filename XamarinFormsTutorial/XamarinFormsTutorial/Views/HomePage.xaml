<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="XamarinFormsTutorial.Views.HomePage">

    <StackLayout>
        <Label HorizontalOptions="Center" FontSize="24" Text="Este es la Home view"></Label>

        <StackLayout 
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            Orientation="Vertical">
            <Label TextColor="Black" Text="{Binding ClickCounterTitle}"></Label>
            <Button Command="{Binding AddClickCommand}"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>